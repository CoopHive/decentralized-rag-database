{
  "name": "mytoken-erc20",
  "version": "1.0.0",
  "description": "An ERC20 token implementation with Solidity",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run deploy.js",
    "deploy:goerli": "hardhat run deploy.js --network goerli",
    "deploy:sepolia": "hardhat run deploy.js --network sepolia",
    "deploy:mainnet": "hardhat run deploy.js --network mainnet",
    "deploy:base-sepolia": "hardhat run deploy.js --network base-sepolia",
    "deploy:base-goerli": "hardhat run deploy.js --network base-goerli",
    "deploy:base": "hardhat run deploy.js --network base",
    "verify:base-sepolia": "hardhat verify --network base-sepolia",
    "verify:base-goerli": "hardhat verify --network base-goerli",
    "verify:base": "hardhat verify --network base"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "erc20",
    "token",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "hardhat": "^2.16.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0"
  }
} 